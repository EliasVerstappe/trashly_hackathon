<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:customControls="shared" xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">

    <ActionBar>
        <Image src="res://trashly_logo_noslogan_white" stretch="none" class="action-image"></Image>
    </ActionBar>

    <sd:RadSideDrawer id="sideDrawer">

        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <customControls:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            
            <StackLayout>
                <StackLayout class="About-title">
                    <Label  text="Over" textWrap="true" class="title"/>
                </StackLayout>

                <StackLayout>
                    <Label text="Deze app is ontwikkeld op de cityhackaton te Brugge" textWrap="true" class="text"/>
                    <Label text="Deze app is ontwikkeld door Michiel Meyfroodt, Elias Verstappen en Daan Ver Eecke maar grotendeels door Michiel." textWrap="true" class="text"/>
                </StackLayout> 
            </StackLayout>        
            
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>

</Page>





