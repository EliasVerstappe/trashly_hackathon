<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:customControls="shared" xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">

    <ActionBar>
        <Image src="res://trashly_logo_noslogan_white" stretch="none" class="action-image"></Image>
    </ActionBar>

    <sd:RadSideDrawer id="sideDrawer">
        
        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <customControls:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <ScrollView>
                <StackLayout>
                    <StackLayout class="Contact-title">
                        <Label id="Contact-label" text="Contact" textWrap="true" />
                    </StackLayout>

                    <StackLayout class="Contact-content">
                        <TextField id="Contact-text" hint = "Onderwerp" />
                        <TextView id="Contact-text" hint = "beschrijving"/>
                        <Button id="Contact-button" text = "verzenden" tap="onTap"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>

</Page>

