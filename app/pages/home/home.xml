<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:customControls="shared" xmlns:sd="nativescript-ui-sidedrawer" loaded="pageLoaded">

    <ActionBar>
        <Image src="res://trashly_logo_noslogan_white" stretch="none" class="action-image"></Image>
    </ActionBar>

    <sd:RadSideDrawer id="sideDrawer">

        <!-- side drawer content -->
        <sd:RadSideDrawer.drawerContent>
            <customControls:sidedrawer />
        </sd:RadSideDrawer.drawerContent>

        <!-- The main content -->
        <sd:RadSideDrawer.mainContent>
            <StackLayout>
                <FlexboxLayout flexDirection="column-reverse" justifyContent="space-around" alignItems="stretch">
                    <Image alignSelf="center" src="~/images/trashly_logo.png" stretch="none"></Image>
                </FlexboxLayout>
                <Label text="Open up the sideBar (swipe from left-side of the screen) to have some interaction." class="labelText" textWrap="true" />
                <Label text="This is an application written by Michiel Meyfroodt." class="labelText" textWrap="true" />
                <Label class="icon" text="&#xe9ad;"/>
            </StackLayout> 
        </sd:RadSideDrawer.mainContent>

    </sd:RadSideDrawer>

</Page>

